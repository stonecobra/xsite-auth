            h1.card-title.pricing-card-title
              | $9
            ul.list-unstyled.mt-3.mb-4
              li Item 1
              li Item 2
            button.btn.btn-lg.btn-block.btn-outline-primary(type='button') Add to Cart
        .card.mb-4.box-shadow
          .card-header
            h4.my-0.font-weight-normal $19 Box
          .card-body
            h1.card-title.pricing-card-title
              | $19
            ul.list-unstyled.mt-3.mb-4
              li Item 1
              li Item 2
            button.btn.btn-lg.btn-block.btn-outline-primary(type='button') Add to Cart
        #private-details.card.mb-4.box-shadow
    pure-dialog#loginmodal
      .container
        form#loginform.form-signin
          h2.form-signin-heading Please sign in
          label.sr-only(for='inputEmail') Email address
          input#inputEmail.form-control(name='username', type='text', placeholder='Username', required='', autofocus='', autocomplete='off')
          label.sr-only(for='inputPassword') Password
          input#inputPassword.form-control(name='password', type='password', placeholder='Password', required='', autocomplete='off')
          .checkbox
            label
              input(type='checkbox', value='remember-me')
              |  Remember me
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    script(src='/js/cors.js')
    script(src='/js/document-register-element.js')
    script(src='/js/pure-dialog.min.js')
    script.
      var loginform = document.getElementById('loginform');
      loginform.addEventListener("submit", function(event) {
        console.log('logging in user: ', loginform.elements.username.value);
        xsiteLogin(loginform.elements.username.value, loginform.elements.password.value)
        document.getElementById('loginmodal').close();
        event.preventDefault();
      });
