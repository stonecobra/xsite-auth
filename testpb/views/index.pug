      a#loginBtn.btn.btn-outline-primary(href='#' onclick='loginmodal.showModal()') Login
      a#logoutBtn.btn.btn-outline-primary(href='#' onclick='xsiteLogout()') Logout
    h1= message
    .container
      #deck.card-deck.mb-3.text-center
        .card.mb-4.box-shadow
          .card-header
            h4.my-0.font-weight-normal $5 Box
          .card-body
            h1.card-title.pricing-card-title
              | $5 
            ul.list-unstyled.mt-3.mb-4
              li Item 1
              li Item 2
            button.btn.btn-lg.btn-block.btn-outline-primary(type='button') Add to Cart
        .card.mb-4.box-shadow
          .card-header
            h4.my-0.font-weight-normal $9 Box
